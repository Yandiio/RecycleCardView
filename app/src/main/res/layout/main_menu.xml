<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@drawable/bgheader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="34dp"
            android:src="@drawable/userpic" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="39dp"
            android:layout_toRightOf="@id/profile_pic"
            android:fontFamily="@font/mm"
            android:text="Yandiio"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/tv_current"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_profile"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/profile_pic"
            android:fontFamily="@font/mm"
            android:text="SGD Dollar"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="156dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bgmenus"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:id="@+id/grid_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="1">

            <RelativeLayout android:layout_rowWeight="1">

                <ImageView
                    android:id="@+id/item_1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/iclist" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_1"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/mm"
                    android:gravity="center_horizontal"
                    android:text="Review" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp">

                <ImageView
                    android:id="@+id/item_2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/icnet" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_2"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/mm"
                    android:gravity="center_horizontal"
                    android:text="Review" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp">

                <ImageView
                    android:id="@+id/item_3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/icplug" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/item_3"
                    android:layout_marginLeft="29dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/mm"
                    android:text="Review" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_rowWeight="1"
                android:layout_marginLeft="6dp">

                <ImageView
                    android:id="@+id/item_4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/icapps" />

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_4"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/mm"
                    android:gravity="center_horizontal"
                    android:text="Review" />

            </RelativeLayout>


        </GridLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="337dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Card_view">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icguide"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mm"
            android:text="Need A Guide?"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Need A Guide?"
            android:fontFamily="@font/mm"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_guide"
            android:layout_marginTop="9dp"
            android:layout_height="wrap_content"
            android:layout_width="170dp"
            android:text="Guide Me"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="@font/ml"
            android:background="@drawable/bgbtnguide"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>